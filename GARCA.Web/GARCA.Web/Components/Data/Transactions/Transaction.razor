@page "/Transaction"

<PageTitle>Movimientos</PageTitle>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">No se puede grabar Transaction</RadzenAlert>
        <RadzenTemplateForm TItem="GARCA.Models.Transactions" Data="@modelPage" Visible="@(modelPage != null)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Cuenta" Component="Account" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@accountsForAccountsId" TextProperty="Description" ValueProperty="Id" AllowClear=true
                         Placeholder="Elige una cuenta" style="display: block; width: 100%" @bind-Value="@modelPage.AccountsId" Name="AccountsId"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Entrada" Component="AmountIn" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                <RadzenNumeric style="display: block; width: 100%" @bind-Value="@modelPage.AmountIn" Name="AmountIn" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Salida" Component="AmountOut" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                <RadzenNumeric style="display: block; width: 100%" @bind-Value="@modelPage.AmountOut" Name="AmountOut" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Categoría" Component="Category" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@categoriesForCategoryid" TextProperty="Description" ValueProperty="Id" AllowClear=true
                                        Placeholder="Elige una categoría" style="display: block; width: 100%" @bind-Value="@modelPage.CategoriesId" Name="CategoriesId" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Fecha" Component="date" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                <RadzenDatePicker style="display: block; width: 100%" @bind-Value="@modelPage.Date" Name="date" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Producto de inversión" Component="InvestmentProduct" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@investmentProductsForInvestmentProductsid" TextProperty="Description" ValueProperty="Id" AllowClear=true
                                        Placeholder="Elige un producto de inversión" style="display: block; width: 100%" @bind-Value="@modelPage.InvestmentProductsId" Name="InvestmentProductsId" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="memo" Component="memo" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@modelPage.Memo" Name="memo" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Persona" Component="Person" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@peopleForPersonsId" TextProperty="name" ValueProperty="Id" AllowClear=true
                         Placeholder="Elige una persona" style="display: block; width: 100%" @bind-Value="@modelPage.PersonsId" Name="PersonsId"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabelText="Etiqueta" Component="Tag" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@tagsForTagsId" TextProperty="Description" ValueProperty="Id" AllowClear=true
                         Placeholder="Elige una etiqueta" style="display: block; width: 100%" @bind-Value="@modelPage.TagsId" Name="TagsId"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="tranfer Splitid" Component="TranferSplitId" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@modelPage.TranferSplitId" Name="TranferSplitId" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="TranferId" Component="TranferId" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@modelPage.TranferId" Name="TranferId" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Transactions Status" Component="TransactionsStatus" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@transactionsStatusesForTransactionsStatusId" TextProperty="Description" ValueProperty="Id" AllowClear=true
                         Placeholder="Elige TransactionsStatus" style="display: block; width: 100%" @bind-Value="@modelPage.TransactionsStatusId" Name="TransactionsStatusId"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="num Shares" Component="NumShares" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                <RadzenNumeric style="display: block; width: 100%" @bind-Value="@modelPage.NumShares" Name="NumShares" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Prices Shares" Component="PricesShares" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                <RadzenNumeric style="display: block; width: 100%" @bind-Value="@modelPage.PricesShares" Name="PricesShares" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="investment Category" Component="InvestmentCategory" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@modelPage.InvestmentCategory" Name="InvestmentCategory" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="balance" Component="balance" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                <RadzenNumeric style="display: block; width: 100%" @bind-Value="@modelPage.Balance" Name="balance" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Orden" Component="Orden" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@modelPage.Orden" Name="Orden" />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

