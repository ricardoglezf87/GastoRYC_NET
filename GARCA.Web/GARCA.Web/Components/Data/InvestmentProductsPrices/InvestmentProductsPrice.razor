@page "/InvestmentProductsPrice"

<PageTitle>Edit InvestmentProductsPrice</PageTitle>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save InvestmentProductsPrice</RadzenAlert>
        <RadzenTemplateForm TItem="GARCA.Models.InvestmentProductsPrices" Data="@investmentProductsPrice" Visible="@(investmentProductsPrice != null)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="date" Component="date" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                <RadzenDatePicker style="display: block; width: 100%" @bind-Value="@investmentProductsPrice.Date" Name="date" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="investment Productsid" Component="InvestmentProductsid" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@investmentProductsPrice.InvestmentProductsid" Name="InvestmentProductsid" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Prices" Component="Prices" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                <RadzenNumeric style="display: block; width: 100%" @bind-Value="@investmentProductsPrice.Prices" Name="Prices" />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

