@page "/Splits"

<PageTitle>Splits</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Splits" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@splits" TItem="GARCA.Models.Splits" RowDoubleClick="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="GARCA.Models.Splits" Property="Id" Title="#">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="GARCA.Models.Splits" Property="Transaction.AmountIn" Title="Transaction">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="GARCA.Models.Splits" Property="Tag.Description" Title="Tag">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="GARCA.Models.Splits" Property="Category.Description" Title="Category">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="GARCA.Models.Splits" Property="AmountIn" Title="Amount In">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="GARCA.Models.Splits" Property="AmountOut" Title="Amount Out">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="GARCA.Models.Splits" Property="memo" Title="memo">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="GARCA.Models.Splits" Property="TranferId" Title="TranferId">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="GARCA.Models.Splits" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="split">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, split)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
